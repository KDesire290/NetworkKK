<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Bouton "Annuler" -->
    <Button
        android:id="@+id/btn_cancel_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- GraphView avec une largeur fixe et une hauteur dynamique -->
    <ci.miage.mob.networkKK.vue.GraphView
        android:id="@+id/graphView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" /> <!-- Ajuster la hauteur en fonction de la largeur -->
</LinearLayout>